{
  "manifest_version": 3,
  "name": "Be Happiful - Quote of the Day",
  "short_name": "Be Happiful",
  "version": "1.1",
  "author": "Jostein Kj√∏nigsen <jostein@kjonigsen.net>",
  "description": "Be Happiful - Quote of the Day. Show daily quotes in your Gmail Signature.",
  "icons": {
    "32": "images/Behappiful-32x32.png",
    "48": "images/Behappiful-48x48.png",
    "96": "images/Behappiful-96x96.png",
    "128": "images/Behappiful-128x128.png"
  },
  "action": {
    "default_title": "Happiful - Quote of the Day",
    "default_popup": "popUp.html",
    "default_icon": {
      "32": "images/Behappiful-32x32.png",
      "48": "images/Behappiful-48x48.png",
      "96": "images/Behappiful-96x96.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": ["storage", "activeTab", "tabs", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["src/extensionInjector.js", "src/extension.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/gmailJsLoader.js",
        "dist/extension.js",
        "dist/gmailJsLoader.js.map",
        "dist/extension.js.map"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["https://*/*"]
}
